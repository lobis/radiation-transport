{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/lobis/radiation-transport/main/analysis/schemas/simulationConfig.schema.json",
  "title": "JSON Schema for SimulationConfig class",
  "description": "Geant4 simulation user configuration",
  "type": "object",
  "additionalProperties": false,
  "required": [],
  "properties": {
    "verboseLevel": {
      "enum": [
        "debug",
        "info",
        "warning",
        "error"
      ],
      "default": "info"
    },
    "runManagerType": {
      "enum": [
        "serial",
        "multithreading"
      ],
      "default": "serial"
    },
    "threads": {
      "type": "integer",
      "minimum": 1,
      "default": 2
    },
    "seed": {
      "type": "integer",
      "default": 0
    },
    "commands": {
      "description": "Geant4 UI Manager compatible command, executed in order of appearance",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^/"
      },
      "default": []
    },
    "detector": {
      "$ref": "#/$defs/detector"
    }
  },
  "$defs": {
    "volume": {
      "type": "object",
      "description": "Volume",
      "required": [
        "name"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "sensitive": {
          "type": "bool",
          "description": "Select as sensitive volume",
          "default": false
        }
      }
    },
    "detector": {
      "type": "object",
      "description": "Detector definition (geometry, volumes...)",
      "required": [
        "geometry",
        "volumes"
      ],
      "additionalProperties": false,
      "properties": {
        "geometry": {
          "type": "string",
          "description": "Geometry filename (GDML or Text Geometry only)"
        },
        "volumes": {
          "type": "array",
          "description": "List of sensitive volumes",
          "items": {
            "$ref": "#/$defs/volume",
            "title": "Volume"
          },
          "default": [
            {
              "name": "volume",
              "sensitive": false
            }
          ]
        }
      }
    }
  }
}
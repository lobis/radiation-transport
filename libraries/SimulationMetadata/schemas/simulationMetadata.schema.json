{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/lobis/radiation-transport/main/analysis/schemas/simulationConfig.schema.json",
  "title": "JSON Schema for SimulationConfig class",
  "description": "Geant4 simulation user configuration",
  "type": "object",
  "additionalProperties": false,
  "required": [],
  "properties": {
    "verboseLevel": {
      "enum": [
        "debug",
        "info",
        "warning",
        "error"
      ],
      "default": "info"
    },
    "output": {
      "type": "string",
      "description": "Output file name (root file). Relative path respect to the config file",
      "default": "default.root"
    },
    "runManagerType": {
      "enum": [
        "serial",
        "multithreading"
      ],
      "default": "serial"
    },
    "threads": {
      "type": "integer",
      "minimum": 1,
      "default": 2
    },
    "seed": {
      "type": "integer",
      "default": 0
    },
    "commands": {
      "description": "Geant4 UI Manager compatible command, executed in order of appearance",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^/"
      },
      "default": []
    },
    "detector": {
      "$ref": "#/$defs/detector"
    },
    "physics": {
      "$ref": "#/$defs/physics"
    },
    "source": {
      "$ref": "#/$defs/source"
    }
  },
  "$defs": {
    "volume": {
      "type": "object",
      "description": "Volume",
      "required": [
        "name"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "sensitive": {
          "type": "bool",
          "description": "Select as sensitive volume",
          "default": false
        }
      }
    },
    "detector": {
      "type": "object",
      "description": "Detector definition (geometry, volumes...)",
      "required": [
        "geometry",
        "volumes"
      ],
      "additionalProperties": false,
      "properties": {
        "geometry": {
          "type": "string",
          "description": "Geometry filename (GDML or Text Geometry only)"
        },
        "volumes": {
          "type": "array",
          "description": "List of sensitive volumes",
          "items": {
            "$ref": "#/$defs/volume",
            "title": "Volume"
          },
          "default": [
            {
              "name": "volume",
              "sensitive": false
            }
          ]
        }
      }
    },
    "source": {
      "type": "object",
      "description": "Primary generator",
      "required": [
        "particle"
      ],
      "additionalProperties": false,
      "properties": {
        "particle": {
          "type": "object",
          "description": "Particle definition and energy",
          "required": [
            "name",
            "energy"
          ],
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string",
              "description": "Particle name in Geant4 format such as mu-, neutron ..."
            },
            "energy": {
              "type": "number",
              "description": "Particle kinetic energy (keV)",
              "exclusiveMinimum": 0
            }
          },
          "default": {
            "name": "geantino",
            "energy": 100
          }
        }
      }
    },
    "physics": {
      "type": "object",
      "description": "PhysicsList definition",
      "required": [
        "physicsLists"
      ],
      "additionalProperties": false,
      "properties": {
        "verbosity": {
          "type": "int",
          "description": "Verbosity level for the physics list (Geant4 verbosity)"
        },
        "productionCutsLengthGlobal": {
          "type": "number",
          "description": "Global production cuts (in mm)",
          "exclusiveMinimum": 0
        },
        "productionCutsEnergyMin": {
          "type": "number",
          "description": "Minimum energy production cut",
          "exclusiveMinimum": 0
        },
        "productionCutsEnergyMax": {
          "type": "number",
          "description": "Maximum energy production cut",
          "exclusiveMinimum": 0
        },
        "physicsLists": {
          "type": "array",
          "description": "List of Geant4 physics lists to register",
          "items": {
            "enum": [
              "G4EmLivermorePhysics",
              "G4DecayPhysics",
              "G4RadioactiveDecayPhysics",
              "G4HadronElasticPhysicsHP",
              "G4IonBinaryCascadePhysics",
              "G4HadronPhysicsQGSP_BIC_HP",
              "G4NeutronTrackingCut",
              "G4EmExtraPhysics"
            ]
          }
        }
      }
    }
  }
}
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/lobis/radiation-transport/main/analysis/schemas/simulationConfig.schema.json",
  "title": "JSON Schema for SimulationConfig class",
  "description": "Geant4 simulation user configuration",
  "type": "object",
  "additionalProperties": false,
  "required": [],
  "properties": {
    "verboseLevel": {
      "enum": [
        "debug",
        "info",
        "warning",
        "error"
      ],
      "default": "info"
    },
    "output": {
      "type": "string",
      "description": "Output file name (root file). Relative path respect to the config file",
      "default": "default.root"
    },
    "runManagerType": {
      "type": "string",
      "enum": [
        "serial",
        "multithreading"
      ],
      "default": "serial"
    },
    "threads": {
      "type": "integer",
      "minimum": 1,
      "default": 2
    },
    "seed": {
      "type": "integer",
      "default": 0
    },
    "fullChain": {
      "type": "boolean",
      "default": false,
      "description": "If enabled, simulate all subsequent decays and store them in separate events. Otherwise ignore them"
    },
    "commands": {
      "description": "Geant4 UI Manager compatible command, executed in order of appearance",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^/"
      },
      "default": [
        "/run/beamOn 100"
      ]
    },
    "detector": {
      "$ref": "#/$defs/detector"
    },
    "physics": {
      "$ref": "#/$defs/physics"
    },
    "source": {
      "$ref": "#/$defs/source"
    }
  },
  "$defs": {
    "volume": {
      "type": "object",
      "description": "Volume",
      "required": [
        "name"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "sensitive": {
          "type": "boolean",
          "description": "Select as sensitive volume",
          "default": false
        }
      }
    },
    "detector": {
      "type": "object",
      "description": "Detector definition (geometry, volumes...)",
      "required": [
        "geometry",
        "volumes"
      ],
      "additionalProperties": false,
      "properties": {
        "geometry": {
          "type": "string",
          "description": "Geometry filename (GDML or Text Geometry only)"
        },
        "volumes": {
          "type": "array",
          "description": "List of sensitive volumes",
          "items": {
            "$ref": "#/$defs/volume",
            "title": "Volume"
          },
          "default": [
            {
              "name": "volume",
              "sensitive": false
            }
          ]
        }
      }
    },
    "source": {
      "type": "object",
      "description": "Primary generator",
      "required": [],
      "additionalProperties": false,
      "properties": {
        "particle": {
          "type": "object",
          "description": "Particle definition and energy",
          "required": [
            "name"
          ],
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string",
              "description": "Particle name in Geant4 format such as mu-, neutron etc. Also supports isotopes such as Pb210",
              "default": "geantino"
            },
            "energy": {
              "type": "number",
              "description": "Particle kinetic energy (keV)",
              "exclusiveMinimum": 0,
              "default": 100.0
            },
            "excitedLevel": {
              "type": "number",
              "description": "Current excited level (for decays). In keV.",
              "minimum": 0,
              "default": 0
            }
          }
        },
        "generator": {
          "description": "One of the available generators: 'point', 'plane', 'disk', ...",
          "additionalProperties": false,
          "properties": {
            "point": {
              "type": "object",
              "required": [
                "position"
              ],
              "properties": {
                "position": {
                  "description": "position of point",
                  "type": "array",
                  "minItems": 3,
                  "maxItems": 3,
                  "default": [
                    0,
                    0,
                    0
                  ]
                }
              }
            },
            "plane": {
              "type": "object",
              "required": [
                "position",
                "direction",
                "size"
              ],
              "properties": {
                "position": {
                  "description": "position of the center of mass",
                  "type": "array",
                  "minItems": 3,
                  "maxItems": 3,
                  "default": [
                    0,
                    0,
                    0
                  ]
                },
                "direction": {
                  "type": "array",
                  "description": "normal vector to the plane. NOT the direction of the particles",
                  "minItems": 3,
                  "maxItems": 3,
                  "default": [
                    0,
                    0,
                    0
                  ]
                },
                "size": {
                  "type": "array",
                  "description": "size of the plane [X,Z]",
                  "minItems": 2,
                  "maxItems": 2,
                  "default": [
                    10,
                    5
                  ]
                }
              }
            },
            "disk": {
              "type": "object",
              "required": [
                "position",
                "diameter"
              ],
              "properties": {
                "position": {
                  "description": "position of the center of mass",
                  "type": "array",
                  "minItems": 3,
                  "maxItems": 3,
                  "default": [
                    0,
                    0,
                    0
                  ]
                },
                "direction": {
                  "type": "array",
                  "description": "normal vector to the disk. NOT the direction of the particles",
                  "minItems": 3,
                  "maxItems": 3,
                  "default": [
                    0,
                    0,
                    0
                  ]
                },
                "diameter": {
                  "type": "number",
                  "description": "diameter of disk in mm",
                  "minimum": 0,
                  "default": 0
                }
              }
            }
          },
          "oneOf": [
            {
              "required": [
                "point"
              ]
            },
            {
              "required": [
                "plane"
              ]
            },
            {
              "required": [
                "disk"
              ]
            }
          ]
        },
        "energy": {
          "description": "One of the available energy distributions: 'mono', ...",
          "additionalProperties": false,
          "properties": {
            "unit": {
              "description": "energy units (default keV)",
              "type": "string",
              "default": "keV",
              "enum": [
                "meV",
                "eV",
                "keV",
                "MeV",
                "GeV",
                "TeV"
              ]
            },
            "min": {
              "description": "left cut of energy distribution (in selected units)",
              "type": "number",
              "minimum": 0,
              "default": 0
            },
            "max": {
              "description": "right cut of energy distribution (in selected units). Should be bigger than 'min'",
              "type": "number",
              "minimum": 0,
              "default": 0
            },
            "mono": {
              "type": "object",
              "description": "mono energetic source",
              "required": [
                "value"
              ],
              "properties": {
                "value": {
                  "description": "energy of source (in selected units)",
                  "type": "number",
                  "minimum": 0,
                  "default": 100
                }
              }
            }
          },
          "oneOf": [
            {
              "required": [
                "mono"
              ]
            }
          ]
        },
        "angular": {
          "description": "One of the available angular distributions: 'isotropic', 'flux'",
          "additionalProperties": false,
          "properties": {
            "thetaMin": {
              "description": "cut for theta (radians)",
              "default": 0,
              "minimum": 0,
              "type": "number"
            },
            "thetaMax": {
              "description": "cut for theta (radians)",
              "exclusiveMinimum": 0,
              "type": "number"
            },
            "phiMin": {
              "description": "cut for phi (radians)",
              "default": 0,
              "minimum": 0,
              "type": "number"
            },
            "phiMax": {
              "description": "cut for phi (radians)",
              "exclusiveMinimum": 0,
              "type": "number"
            },
            "isotropic": {
              "nullable": true,
              "description": "isotropic source (this has no additional properties)"
            },
            "flux": {
              "type": "object",
              "description": "particles launched in a specified direction (narrow beam)",
              "required": [
                "direction"
              ],
              "properties": {
                "direction": {
                  "description": "direction of particles",
                  "type": "array",
                  "minItems": 3,
                  "maxItems": 3,
                  "default": [
                    0,
                    1,
                    0
                  ]
                }
              }
            }
          },
          "oneOf": [
            {
              "required": [
                "isotropic"
              ]
            },
            {
              "required": [
                "flux"
              ]
            }
          ]
        }
      }
    },
    "physics": {
      "type": "object",
      "description": "PhysicsList definition",
      "required": [
        "physicsLists"
      ],
      "additionalProperties": false,
      "properties": {
        "verbosity": {
          "type": "integer",
          "description": "Verbosity level for the physics list (Geant4 verbosity)",
          "default": 0
        },
        "productionCutsLengthGlobal": {
          "type": "number",
          "description": "Global production cuts (in mm)",
          "exclusiveMinimum": 0
        },
        "productionCutsEnergyMin": {
          "type": "number",
          "description": "Minimum energy production cut",
          "exclusiveMinimum": 0
        },
        "productionCutsEnergyMax": {
          "type": "number",
          "description": "Maximum energy production cut",
          "exclusiveMinimum": 0
        },
        "physicsLists": {
          "type": "array",
          "description": "List of Geant4 physics lists to register",
          "items": {
            "type": "string",
            "enum": [
              "G4EmLivermorePhysics",
              "G4DecayPhysics",
              "G4RadioactiveDecayPhysics",
              "G4HadronElasticPhysicsHP",
              "G4IonBinaryCascadePhysics",
              "G4HadronPhysicsQGSP_BIC_HP",
              "G4NeutronTrackingCut",
              "G4EmExtraPhysics"
            ]
          },
          "default": [
            "G4EmLivermorePhysics",
            "G4DecayPhysics",
            "G4RadioactiveDecayPhysics",
            "G4HadronElasticPhysicsHP",
            "G4IonBinaryCascadePhysics",
            "G4HadronPhysicsQGSP_BIC_HP",
            "G4NeutronTrackingCut",
            "G4EmExtraPhysics"
          ]
        }
      }
    }
  }
}